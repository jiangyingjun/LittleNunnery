<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_snow"
    tools:context="com.shuai.activity.home.MainActivity">
    <android.support.v4.view.ViewPager
        android:id="@+id/main_layout_page"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:layout_above="@+id/main_tab_layout"/>
   <LinearLayout
       android:id="@+id/main_tab_layout"
       android:layout_width="match_parent"
       android:orientation="horizontal"
       android:layout_height="?attr/actionBarSize"
       android:background="@android:color/holo_green_dark"
       android:layout_alignParentBottom="true">

       <TextView
           android:id="@+id/main_tab_1"
           android:layout_width="wrap_content"
           android:layout_height="match_parent"
           android:layout_weight="1"
           android:textColor="@android:color/white"
           android:background="@drawable/main_tab_background_selector"
           android:gravity="center"
           android:text="tab1"/>
       <TextView
           android:id="@+id/main_tab_2"
           android:layout_width="wrap_content"
           android:layout_height="match_parent"
           android:textColor="@android:color/white"
           android:background="@drawable/main_tab_background_selector"
           android:layout_weight="1"
           android:gravity="center"
           android:text="tab2"/>
       <TextView
           android:id="@+id/main_tab_3"
           android:layout_width="wrap_content"
           android:layout_height="match_parent"
           android:textColor="@android:color/white"
           android:background="@drawable/main_tab_background_selector"
           android:layout_weight="1"
           android:gravity="center"
           android:text="tab3"/>
       <TextView
           android:id="@+id/main_tab_4"
           android:layout_width="wrap_content"
           android:layout_height="match_parent"
           android:textColor="@android:color/white"
           android:background="@drawable/main_tab_background_selector"
           android:layout_weight="1"
           android:gravity="center"
           android:text="tab4"/>
       <TextView
           android:id="@+id/main_tab_5"
           android:layout_width="wrap_content"
           android:layout_height="match_parent"
           android:textColor="@android:color/white"
           android:layout_weight="1"
           android:background="@drawable/main_tab_background_selector"
           android:gravity="center"
           android:text="tab5"/>
   </LinearLayout>
</RelativeLayout>
